<% if action == :edit  %>
  <% action_url = band_url(band) %>
  <% submit_text = 'Update Band' %>
<% else %>
  <% action_url = bands_url %>
  <% submit_text = 'Create Band' %>
<% end %>

<form action="<%= action_url %>" method="post">

  <% if action == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <input type="hidden" name="authenticity_token" value="form_authenticity_token">

  <label>Name:
    <input type="text" name="band[email]" value="<%= band.name %>">
  </label>

  <input type="submit" value="<%= submit_text %>">

</form>
